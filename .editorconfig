root = true

[*]
indent_style = space
indent_size = 4
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

[*.{cs,csx}]
# .NET naming conventions
dotnet_naming_rule.private_fields_underscore.symbols = private_fields
dotnet_naming_rule.private_fields_underscore.style = underscore_prefix
dotnet_naming_rule.private_fields_underscore.severity = suggestion

dotnet_naming_symbols.private_fields.applicable_kinds = field
dotnet_naming_symbols.private_fields.applicable_accessibilities = private

dotnet_naming_style.underscore_prefix.capitalization = camel_case
dotnet_naming_style.underscore_prefix.required_prefix = _

# Code style
csharp_style_var_for_built_in_types = true:suggestion
csharp_style_var_when_type_is_apparent = true:suggestion
csharp_prefer_braces = when_multiline:suggestion

# Analyzer configuration
# CA1305: Specify IFormatProvider - too noisy for internal formatters
dotnet_diagnostic.CA1305.severity = none
# CA1707: Identifiers should not contain underscores - conflicts with test naming
dotnet_diagnostic.CA1707.severity = none
# CA1822: Mark members as static - demote to suggestion
dotnet_diagnostic.CA1822.severity = suggestion
# CA1848: Use LoggerMessage delegates - performance optimization, not critical for v1
dotnet_diagnostic.CA1848.severity = suggestion
# CA1859: Use concrete types - demote to suggestion
dotnet_diagnostic.CA1859.severity = suggestion
# CA1863: Use CompositeFormat - performance optimization, not critical
dotnet_diagnostic.CA1863.severity = suggestion
# CA1866: Use char overload - minor optimization
dotnet_diagnostic.CA1866.severity = suggestion
# CA1869: Cache JsonSerializerOptions - minor optimization
dotnet_diagnostic.CA1869.severity = suggestion
# RCS1075: Empty catch clause - demote to suggestion
dotnet_diagnostic.RCS1075.severity = suggestion
# RCS1194: Implement exception constructors - not needed for internal exceptions
dotnet_diagnostic.RCS1194.severity = none

# Test project relaxations
[{tests,examples,benchmarks}/**/*.cs]
# CA1001: Types that own disposable fields should be disposable - ok in tests
dotnet_diagnostic.CA1001.severity = suggestion
# CA1051: Visible instance fields - ok in test helpers
dotnet_diagnostic.CA1051.severity = none
# CA1304/CA1311: Specify culture - not critical in tests
dotnet_diagnostic.CA1304.severity = none
dotnet_diagnostic.CA1311.severity = none
# CA1711: Identifiers should not have incorrect suffix - test naming freedom
dotnet_diagnostic.CA1711.severity = none
# CA1806: Do not ignore method results - common in test assertions
dotnet_diagnostic.CA1806.severity = suggestion
# CA1816: GC.SuppressFinalize - not critical in test fixtures
dotnet_diagnostic.CA1816.severity = suggestion
# CA2201: Exception type not specific - tests frequently throw generic exceptions for testing
dotnet_diagnostic.CA2201.severity = none
# CA1310: Specify StringComparison - not critical in test assertions
dotnet_diagnostic.CA1310.severity = none
# CA1852: Types can be sealed - test classes often kept unsealed
dotnet_diagnostic.CA1852.severity = none
# CA1861: Avoid constant arrays - acceptable in test data
dotnet_diagnostic.CA1861.severity = suggestion

[*.{json,yml,yaml}]
indent_size = 2

[*.md]
trim_trailing_whitespace = false

[Makefile]
indent_style = tab
